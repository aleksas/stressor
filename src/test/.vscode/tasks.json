{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create output dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "../../bin/Linux_x86/"
            ]
        },
        {
            "label": "build test",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "LithUSStest.cpp",
                "-o",
                "../../bin/Linux_x86/test",
                "-Wl,-rpath,.",
                "-L../../bin/Linux_x86/",
                "-lTextNormalization",
                "-ltranscrLUSS",
                "-finput-charset=windows-1257",
                "-fexec-charset=windows-1257"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "create output dir"
            ]
        }
    ]
}